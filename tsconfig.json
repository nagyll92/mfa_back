{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "utils/*": ["src/utils/*"],
      "shared/*": ["src/shared/*"]
    },
    "incremental": true,

  },
  "exclude": ["node_modules", "dist"]
}
